{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./../dist",
    "baseUrl": "./",
    "rootDir": "./",
    "incremental": true,
    "esModuleInterop": true,
  },
  "exclude": ["./../node_modules", "./../dist", "./../tmp"]
}
